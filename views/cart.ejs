<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/cart.css">
    <script src="js/input.js"></script>
    <title>Cart</title>

</head>
<body>
    <nav class="navbar">
        <div class="brand-title"><a href="/">BuyIteams</a></div>
        <a href="#" class="toggle-button">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </a>
        <div class="navbar-links">
          <ul>
            <li><a href="/cart"><img src="img/cart.jpg" width="30px" height="30px"></a></li>
            <li><a href="#">Orders</a></li>
            <li><a href="#">Login</a></li>
          </ul>
        </div>
    </nav>

    <main>
        <section class="section-cart">
       <div class="table">
               <div class="row table-heading">
                   <div class="span-1-of-4">
                       <p class="details">Product</p>
                    </div>
                   <div class="span-1-of-4">
                       <p class="details">Price</p>
                    </div>
                   <div class="span-1-of-4">
                       <p class="details"> Quantity</p>
                    </div>
                   <div class="span-1-of-4">
                       <p class="details">Total</p>
                    </div>
               </div>
               <% user.forEach(function(user){%>
             <div class="row table-data">
                
                    <div class="span-1-of-4">
                        <div class="listing comp">
                            <img src="<%=user.ImageUrl %>" alt="" class="pic">
                            <span class="data">
                                <h4><%=user.ProductName %></h4>
                            </span>
                        </div>
                    </div>
                    <div class="span-1-of-4">
                        <p class="listing"><%=user.ProductPrice %>    <%=user.Quantity %></p>
                        <p><%=user.Quantity %></p>
                    </div>
                    <div class="span-1-of-4">
                        <p class="listing"> <select class="Q1" value="<%=user.Quantity %>" name="Quantity" id="Quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                          </select></p>
                    </div>
                    <div class="span-1-of-4">
                        <p class="listing">$<%=user.ProductTotalPrice %></p>
                    </div>


                </div>
                <%}); %>
            </div>
        </section>
    </main>
    <footer class="footer">
        <div class="">
            <h3 class="footer__logo" >BuyItems</h3>
        </div>
        <div class="tab-row">
            <div class="span-1-of-3">
                <div class="footer__info">
                    <h3 class="footer__heading">Information</h3>
                    <ul class="footer__list">
                        <li class="footer__links"><a href="#">About Us</a></li>
                        <li class="footer__links"><a href="#">More Info</a></li>
                        <li class="footer__links"><a href="#">Blog</a></li>
                    </ul>
                </div>
            </div>
            <div class="span-1-of-3">
                <div class="footer__info">
                    <h3 class="footer__heading">helpful links</h3>
                    <ul class="footer__list">
                        <li class="footer__links"><a href="#">About Us</a></li>
                        <li class="footer__links"><a href="#">More Info</a></li>
                        <li class="footer__links"><a href="#">Blog</a></li>
                    </ul>
                </div>
            </div>
            <div class="span-1-of-3">
                <div class="footer__contact">
                    <h3 class="footer__heading">mail us for more info</h3>
                    <p><a href="mailto:pawrovers@gmail.com" style="color: rgba(255, 255, 255, 0.7);"><i class="fa fa-envelope footer__mailbox icon" aria-hidden="true"></i>pawrovers.co.in</a></p>
                </div>
            </div>
        </div>
        <hr class="breaking-line">
        <div class="tab-row">
            <div class="footer__icon-box">
                <ul class="footer__list">
                    <li class="footer__links"><a  href="#"><i class="fa fa-facebook-square fa-3x icon" aria-hidden="true" ></i></a></li>
                    <li class="footer__links"><a  href="#"><i class="fa fa-google-plus fa-3x icon" aria-hidden="true" ></i></a></li>
                    <li class="footer__links"><a  href="#"><i class="fa fa-twitter-square fa-3x icon" aria-hidden="true" ></i></a></li>
                    <li class="footer__links"><a  href="#"><i class="fa fa-instagram fa-3x icon" aria-hidden="true" ></i></a></li>
                </ul><span><p>2020 &copy; company.Ltd. All Right Reserved</p></span>
            </div>
        </div>
    </footer>
    
</body>
</html>